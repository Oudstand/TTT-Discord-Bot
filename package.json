{
  "name": "ttt-discord-bot",
  "version": "1.0.0",
  "description": "Ein Discord-Bot zur automatischen Mute-/Unmute-Steuerung f√ºr TTT und Darstellung von Statistiken.",
  "author": "Oudstand",
  "main": "app.ts",
  "scripts": {
    "postinstall": "playwright install chromium",
    "prestart": "bun run build:frontend",
    "start": "bun run app.ts",
    "dev": "bun run --watch app.ts",
    "build:frontend": "bun build ./public/ts/dashboard.ts --outdir ./public/js --minify",
    "watch:frontend": "bun build ./public/ts/dashboard.ts --outdir ./public/js --watch --minify",
    "build": "bun run build:frontend && bun build ./app.ts --compile --outfile \"TTT Discord Bot.exe\""
  },
  "dependencies": {
    "discord.js": "^14.21.0",
    "express": "^5.1.0",
    "playwright": "^1.48.2",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/ws": "^8.18.1",
    "bun-types": "^1.2.19",
    "typescript": "^5.8.3"
  }
}